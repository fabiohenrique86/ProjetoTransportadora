@{
    ViewBag.Title = "Transportadora";
}

@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

        });

    </script>
}
<div>
    <h2><i class="glyphicon glyphicon-dashboard" style="color: #0f3456" title="Transportadora"></i> Transportadora</h2>
    <hr />
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                <div class="panel panel-primary">
                    <div class="panel-heading"><i class="glyphicon glyphicon-pushpin" style="color: #0f3456" title="Pessoas Físicas"></i> Pessoas Físicas</div>
                    <div class="panel-body italico"><b class="huge">@ViewBag.QuantidadePessoasFisicas</b> pessoas físicas foram cadastradas neste mês</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="panel panel-primary">
                    <div class="panel-heading"><i class="glyphicon glyphicon-asterisk" style="color: #0f3456" title="Pessoas Jurídicas"></i> Pessoas Jurídicas</div>
                    <div class="panel-body italico"><b class="huge">@ViewBag.QuantidadePessoasJuridicas</b> pessoas jurídicas foram cadastradas neste mês</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="panel panel-primary">
                    <div class="panel-heading"><i class="glyphicon glyphicon-user" style="color: #0f3456" title="Usuários"></i> Usuários</div>
                    <div class="panel-body italico"><b class="huge">@ViewBag.QuantidadeUsuarios</b> usuários foram cadastrados neste mês</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="panel panel-primary">
                    <div class="panel-heading"><i class="glyphicon glyphicon-user" style="color: #0f3456" title="Contratos"></i> Contratos</div>
                    <div class="panel-body italico"><b class="huge">0</b> contratos foram cadastrados neste mês</div>
                </div>
            </div>
        </div>
    </div>    
</div>