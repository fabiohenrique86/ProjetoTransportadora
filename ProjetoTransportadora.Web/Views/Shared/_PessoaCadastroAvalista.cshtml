@using ProjetoTransportadora.Dto;

@{
    UsuarioDto usuarioDto = null;

    if (Session[System.Configuration.ConfigurationManager.AppSettings["ProjetoTransportadora.Usuario"]] != null)
    {
        usuarioDto = (UsuarioDto)Session[System.Configuration.ConfigurationManager.AppSettings["ProjetoTransportadora.Usuario"]];
    }
}

<div id="panelPessoaCadastroAvalista" style="display: none">
    <div class="panel panel-default panel-avalista">
        <div class="panel-heading">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-12" style="padding-top: 15px">
                        <div class="input-group">
                            <input id="idAvalistaHidden" type='hidden' class='avalista' />
                            <input id="idAvalistaInput" type='text' class='form-control text-center' placeholder='Avalista (Mínimo de 3 caracteres - CPF ou Nome)' />
                            @*<div class="input-group-addon excluirAvalista" style="cursor: pointer"><i class="glyphicon glyphicon-minus"></i></div>*@
                            <div id="lnkExpandirRecolher" class="input-group-addon" style="cursor: pointer" data-toggle="collapse" data-target='#idCollapse' aria-expanded="false" aria-controls="idCollapse"><i class="glyphicon glyphicon-chevron-down"></i></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id='idCollapse' class="colapse collapse">
            <div class="panel-body">
                <div class="rolagem-vertical">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-7">
                                <label>Nome:</label>
                                <input id="nomePessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Cpf:</label>
                                <input id="cpfPessoaCadastroAvalista" type="text" class="form-control cpf" />
                            </div>
                            <div class="col-md-2">
                                <label>Rg:</label>
                                <input id="rgPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label>Data Nascimento:</label>
                                <input id="dataNascimentoPessoaCadastroAvalista" type="text" class="form-control data" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Naturalidade:</label>
                                <input id="cidadeNascimentoPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>Uf:</label>
                                @Html.DropDownList("ufNascimentoPessoaCadastroAvalista", new SelectList(ViewBag.Estado, "Uf", "Nome"), "Uf", new { @id = "ufNascimentoPessoaCadastroAvalista", @class = "form-control", Name = string.Empty })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Estado Civil:</label>
                                @Html.DropDownList("estadoCivilPessoaCadastroAvalista", new SelectList(ViewBag.EstadoCivil, "Id", "Nome"), "Estado Civil", new { @id = "estadoCivilPessoaCadastroAvalista", @class = "form-control", Name = string.Empty })
                            </div>
                            <div class="col-md-4">
                                <label>Regime de Casamento:</label>
                                @Html.DropDownList("regimeCasamentoPessoaCadastroAvalista", new SelectList(ViewBag.RegimeCasamento, "Id", "Nome"), "Regime de Casamento", new { @id = "regimeCasamentoPessoaCadastroAvalista", @class = "form-control", Name = string.Empty })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-7">
                                <label class="control-label">Cônjuge:</label>
                                <div class="input-group">
                                    <input id="conjugeAvalistaInput" type="text" class="form-control" placeholder="Cônjuge (Mínimo de 3 caracteres - CPF ou Nome)" />
                                    <input id="conjugeAvalistaHidden" type="hidden" />
                                    <div id="conjugeAvalistaAdicionar" class="input-group-addon" style="cursor: pointer" data-id="" data-nome="" data-titulo="Cônjuge" data-sem-vinculo="false" data-documento="Cpf" onclick="abrirModalPessoaCadastroAuxiliar(this)"><i class="glyphicon glyphicon-plus"></i></div>
                                    <div id="conjugeAvalistaEditar" class="input-group-addon" style="cursor: pointer" data-id="" data-nome="" data-titulo="Cônjuge" data-sem-vinculo="false" data-documento="Cpf" data-editar="true" onclick="abrirModalPessoaCadastroAuxiliar(this)"><i class="glyphicon glyphicon-edit"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-7">
                                <label class="control-label">Pai:</label>
                                <div class="input-group">
                                    <input id="paiAvalistaInput" type="text" class="form-control" placeholder="Pai (Mínimo de 3 caracteres - CPF ou Nome)" />
                                    <input id="paiAvalistaHidden" type="hidden" />
                                    <div id="paiAvalistaAdicionar" class="input-group-addon" style="cursor: pointer" data-id="" data-nome="" data-titulo="Pai" data-sem-vinculo="true" data-documento="Cpf" onclick="abrirModalPessoaCadastroAuxiliar(this)"><i class="glyphicon glyphicon-plus"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-7">
                                <label class="control-label">Mãe:</label>
                                <div class="input-group">
                                    <input id="maeAvalistaInput" type="text" class="form-control" placeholder="Mãe (Mínimo de 3 caracteres - CPF ou Nome)" />
                                    <input id="maeAvalistaHidden" type="hidden" />
                                    <div id="maeAvalistaAdicionar" class="input-group-addon" style="cursor: pointer" data-id="" data-nome="" data-titulo="Mãe" data-sem-vinculo="true" data-documento="Cpf" onclick="abrirModalPessoaCadastroAuxiliar(this)"><i class="glyphicon glyphicon-plus"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                <label>Cep:</label>
                                <input id="cepResidenciaPessoaCadastroAvalista" type="text" class="form-control cep" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-5">
                                <label>Logradouro:</label>
                                <input id="logradouroResidenciaPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label>Número:</label>
                                <input id="numeroResidenciaPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Complemento:</label>
                                <input id="complementoResidenciaPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>Bairro:</label>
                                <input id="bairroResidenciaPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Cidade:</label>
                                <input id="cidadeResidenciaPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>Uf:</label>
                                @Html.DropDownList("ufResidenciaPessoaCadastroAvalista", new SelectList(ViewBag.Estado, "Uf", "Nome"), "Uf", new { @id = "ufResidenciaPessoaCadastroAvalista", @class = "form-control", Name = string.Empty })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Tipo Residência:</label>
                                @Html.DropDownList("tipoResidenciaPessoaCadastroAvalista", new SelectList(ViewBag.TipoResidencia, "Id", "Nome"), "Tipo Residência", new { @id = "tipoResidenciaPessoaCadastroAvalista", @class = "form-control", Name = string.Empty })
                            </div>
                            <div class="col-md-2">
                                <label>Valor Aluguel:</label>
                                <input id="valorAluguelPessoaCadastroAvalista" type="text" class="form-control valor" />
                            </div>
                            <div class="col-md-2">
                                <label>Tempo na Residência:</label>
                                <input id="tempoResidencialPessoaCadastroAvalista" type="text" class="form-control ano" placeholder="Meses" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Profissão:</label>
                                <input id="profissaoPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Empresa Trabalho:</label>
                                <input id="empresaTrabalhoPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Cargo:</label>
                                <input id="cargoPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label>Data Admissão:</label>
                                <input id="dataAdmissaoPessoaCadastroAvalista" type="text" class="form-control data" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Valor Salário:</label>
                                <input id="valorSalarioPessoaCadastroAvalista" type="text" class="form-control valor" />
                            </div>
                            <div class="col-md-3">
                                <label>Data Referência Salário:</label>
                                <input id="dataReferenciaSalarioPessoaCadastroAvalista" type="text" class="form-control data" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Empresa Pessoal:</label>
                                <input id="empresaPessoalPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Telefone Empresa:</label>
                                <input id="telefoneEmpresaPessoaCadastroAvalista" type="text" class="form-control celularDDD" />
                            </div>
                            <div class="col-md-3">
                                <label>E-mail Empresa:</label>
                                <input id="emailEmpresaPessoaCadastroAvalista" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>