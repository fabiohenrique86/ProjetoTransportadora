                    return;
                }

                window.location.href = "@Url.Action("Exportar", "PessoaFisica")?Nome=" + $("#nomePesquisar").val() + "&Cpf=" + $("#cpfPesquisar").val() + "&Rg=" + $("#rgPesquisar").val() + "&IdTipoPessoa=" + "@TipoPessoaDto.TipoPessoa.PessoaFísica.GetHashCode()";
